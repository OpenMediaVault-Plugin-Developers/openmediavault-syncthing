set -e

. /etc/default/openmediavault
. /usr/share/openmediavault/scripts/helper-functions

SYNCTHING_CONFIG="/etc/syncthing.conf";
RUN_AS="syncthing"
RUN_GRP="users"
SERVICE="syncthing"
XPATH="//services/${SERVICE}"
XPATH_ENABLE="${XPATH}/enable"


port=$(omv_config_get "${XPATH}/port")

# Create syncthing config file
cat <<EOF > ${SYNCTHING_CONFIG}
PORT=${port}
EOF

exit 0
